<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/dimen_10dp">

    <LinearLayout
        android:id="@+id/add_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/catimgview"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"/>


        <EditText
            android:id="@+id/catNameedttxt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp"
            android:hint="Add Category"
            android:background="@drawable/rounded_border_textfield"
            android:gravity="center"
            android:layout_margin="2dp">

            <requestFocus />
        </EditText>


    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_margin="@dimen/dimen_10dp"
        android:layout_below="@+id/add_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dimen_10dp"
        app:cardCornerRadius="@dimen/dimen_10dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/catIconRV"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
           >

        </android.support.v7.widget.RecyclerView>
    </android.support.v7.widget.CardView>

    <LinearLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/card_view"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/catAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_add"
            android:textColor="@color/color_white"
            app:backgroundTint="@color/colorPrimary"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/catCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_cancel"
            android:textColor="@color/color_white"
            app:backgroundTint="@color/colorPrimary"/>


    </LinearLayout>


</RelativeLayout>